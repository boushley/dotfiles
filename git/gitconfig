[user]
	name = Aaron Boushley
	email = aboushley@axon.com
[color]
	diff = auto
	status = auto
	merge = auto
	ui = true
[alias]
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	please = push --force-with-lease
	pushup = !git push -u origin `git symbolic-ref --short HEAD`
	what = log --left-right --cherry-pick --oneline --pretty=format:\"%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s\" --date=short
	remove-merged-branches = !git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d
[core]
	autocrlf = input
	safecrlf = warn
	excludesfile = ~/.gitignore_global
	precomposeUnicode = true
[push]
	default = simple
[branch]
	autosetuprebase = always
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[merge]
	tool = vscodium
	conflictstyle = diff3
[mergetool "vscodium"]
	cmd = code --wait $MERGED
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RX
	show = diff-so-fancy | less --tabs=1,5 -RX
[url "git@git.taservs.net:"]
	insteadOf = https://git.taservs.net/
[submodule]
	recurse = true
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = boushley@gmail.com
