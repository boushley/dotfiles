[user]
	name = Aaron Boushley
	email = aboushley@axon.com
[color]
	diff = auto
	status = auto
	merge = auto
	ui = true
[alias]
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	please = push --force-with-lease
	pushup = !git push -u origin `git symbolic-ref --short HEAD`
	what = log --left-right --cherry-pick --oneline --pretty=format:\"%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s\" --date=short
	remove-merged-branches = !git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d
[core]
	autocrlf = input
	safecrlf = warn
	excludesfile = ~/.gitignore_global
[merge]
	tool = intellij
	conflictstyle = diff3
[push]
	default = simple
[branch]
	autosetuprebase = always
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[mergetool "intellij"]
	cmd = /usr/local/bin/idea merge $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE") $(cd $(dirname "$BASE") && pwd)/$(basename "$BASE") $(cd $(dirname "$MERGED") && pwd)/$(basename "$MERGED")
	trustExitCode = true
[diff]
	tool = intellij
[difftool "intellij"]
	cmd = /usr/local/bin/idea diff $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE")
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RX
	show = diff-so-fancy | less --tabs=1,5 -RX
[url "git@git.taservs.net:"]
	insteadOf = https://git.taservs.net/
[submodule]
	recurse = true
