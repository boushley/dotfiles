# Use this to debug any slowness or problems like that
# setopt XTRACE VERBOSE
source ~/MacImprovement/bin/MacImprovementSetup.app/Contents/MacOS/setup-htjar
export SDETOOLS_HOST=boushley-1.desktop.amazon.com

# Include other configuration
source ~/.dotfiles/zsh/aliases
source ~/.dotfiles/zsh/zsh_aliases
source ~/.zsh_aliases

# Use vim style editing
bindkey -v

# Allow ctrl+r for searching through command history
bindkey "^R" history-incremental-search-backward

# Allow searching up and down with arrow keys after ctrl+r
bindkey "^[[A" history-search-backward
bindkey "^[[B" history-search-forward

# Define the editor for some commands
export EDITOR="/usr/bin/vim"

# Setup cert file
#export SSL_CERT_FILE=/opt/local/etc/openssl/cert.pem

# Setup identities
ssh-add ~/.ssh/WardPair.pem
ssh-add ~/.ssh/PreparersMind.pem
ssh-add ~/.ssh/us-west-1.pem
ssh-add ~/.ssh/amzn_rsa

# Configure the history file location and sizes
HISTFILE=~/.histfile
HISTSIZE=2000
SAVEHIST=2000

# Fixes a problem where git diff with color doesn't show colors
export LESS=-R 

# Automatically change to directory if you just type directory name
setopt autocd

export RPROMPT=%~%

# Add macports to the path and android adb
export PATH=/opt/local/bin:/usr/local/bin:/opt/local/sbin:/sdks/android/tools:/sdks/play/current:$PATH:~/bin:/sdks/eb-cli-2.4.0/eb/macosx/python2.7:/usr/local/share/npm/lib/node_modules/httpster/bin:/sdks/android/platform-tools

# Add jsctags to the Node Path
export NODE_PATH=/usr/local/lib/jsctags/:/opt/local/lib/node

# Add hosts from knownhosts to completion
local knownhosts
knownhosts=( ${${${${(f)"$(<$HOME/.ssh/known_hosts)"}:#[0-9]*}%%\ *}%%,*} )
zstyle ':completion:*:(ssh|scp|sftp):*' hosts $knownhosts

# Homebrew Completion
fpath=($HOME/.zsh/func $fpath)
typeset -U fpath

# The following lines were added by compinstall

zstyle ':completion:*' completer _complete _ignored _approximate
zstyle ':completion:*' file-sort name
zstyle ':completion:*' users off
zstyle ':completion:*' format 'Completing %d'
zstyle ':completion:*' group-name ''
zstyle ':completion:*' ignore-parents parent pwd
zstyle ':completion:*' list-colors ''
zstyle ':completion:*' list-suffixes true
zstyle ':completion:*' matcher-list '' 'm:{[:lower:]}={[:upper:]}' 'r:|[._-]=** r:|=**'
zstyle ':completion:*' max-errors 1
zstyle ':completion:*' menu select=long
zstyle ':completion:*' preserve-prefix '//[^/]##/'
zstyle ':completion:*' prompt 'Found %e Errors'
zstyle ':completion:*' select-prompt %SScrolling active: current selection at %p%s
zstyle :compinstall filename '/Users/boushley/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall
